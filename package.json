{
    "name": "letters-social",
    "version": "1.0.0",
    "description": "Sample application for React in Action",
    "main": "./src/index.js",
    "@std/esm": {
        "esm": "all",
        "cjs": true
    },
    "now": {
        "name": "letters-social",
        "alias": "social.react.sh",
        "dotenv": ".env.production"
    },
    "scripts": {
        "analyze": "ANALYZE=true npm run build",
        "api": "nodemon -x 'node -r @std/esm ./db/run.js --inspect'",
        "build:app": "NODE_ENV=production webpack -p --progress --config ./build/webpack.config.prod.js",
        "build": "NODE_ENV=production npm-run-all build:app db:seed",
        "client:dev": "webpack-dev-server --config ./build/webpack.config.js",
        "doc": "esdoc -c esdoc.json",
        "db:seed": "node -r @std/esm db/seed.js",
        "deploy": "now -e LETTERS_FIREBASE_ADMIN_KEY=${LETTERS_FIREBASE_ADMIN_KEY} -d",
        "dev": "NODE_ENV=development npm-run-all -p api client:dev server:dev styles:w",
        "server:dev": "nodemon --config nodemon.json index.js",
        "start": "NODE_ENV=production pm2 start ./index.js --no-daemon",
        "styles:w": "npm run styles && node-sass src/styles/styles.scss -o static/ -w src/styles --watch --recursive",
        "styles": "node-sass -q src/styles/styles.scss -o static/",
        "r-start": "PORT=3001 BROWSER=none react-scripts start",
        "r-build": "react-scripts build",
        "r-test": "react-scripts test --env=jsdom",
        "r-eject": "react-scripts eject"
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/react-in-action/letters-social.git"
    },
    "author": "Mark Thomas <mark@ifelse.io>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/react-in-action/letters-social/issues"
    },
    "engines": {
        "node": "8.5.0",
        "npm": "5.4.0"
    },
    "homepage": "https://github.com/react-in-action/letters-social#readme",
    "dependencies": {
        "@std/esm": "^0.11.0",
        "axios": "0.16.2",
        "babel-register": "6.26.0",
        "bad-words": "1.5.1",
        "body-parser": "^1.18.2",
        "classnames": "2.2.5",
        "compression": "^1.7.1",
        "config": "1.26.2",
        "cookie-parser": "1.4.3",
        "cookies": "0.7.1",
        "cors": "2.8.4",
        "debug": "2.6.3",
        "enroute": "1.0.1",
        "environs": "0.4.5",
        "express": "^4.15.5",
        "firebase": "^4.4.0",
        "firebase-admin": "^5.3.0",
        "font-awesome": "4.7.0",
        "helmet": "^3.8.2",
        "history": "4.7.2",
        "hpp": "0.2.2",
        "humanize-duration": "3.10.1",
        "invariant": "2.2.2",
        "isomorphic-fetch": "2.2.1",
        "js-cookie": "2.1.4",
        "json-server": "0.12.0",
        "lodash": "4.17.4",
        "mapbox": "1.0.0-beta9",
        "morgan": "^1.9.0",
        "parse-link-header": "1.0.1",
        "pm2": "^2.7.1",
        "react": "^16.0.0",
        "react-dom": "^16.0.0",
        "react-redux": "5.0.6",
        "react-router": "3.2.0",
        "redux": "3.7.2",
        "redux-thunk": "2.2.0",
        "response-time": "2.3.2",
        "serve-favicon": "^2.4.5",
        "uuid": "3.1.0"
    },
    "devDependencies": {
        "autoprefixer": "7.1.4",
        "babel-eslint": "^8.0.1",
        "babel-jest": "^21.2.0",
        "babel-loader": "7.1.2",
        "babel-plugin-transform-async-to-generator": "^6.24.1",
        "babel-preset-env": "1.6.0",
        "babel-preset-es2015": "^6.24.1",
        "babel-preset-react-app": "^3.0.3",
        "coveralls": "^2.13.2",
        "css-loader": "0.28.7",
        "cssnano": "3.10.0",
        "enzyme": "^3.0.0",
        "enzyme-adapter-react-16": "^1.0.0",
        "esdoc": "^1.0.3",
        "esdoc-ecmascript-proposal-plugin": "^1.0.0",
        "esdoc-jsx-plugin": "^1.0.0",
        "esdoc-standard-plugin": "^1.0.0",
        "eslint": "^4.7.2",
        "eslint-config-prettier": "^2.6.0",
        "eslint-plugin-react": "^7.4.0",
        "extract-text-webpack-plugin": "3.0.0",
        "faker": "4.1.0",
        "file-loader": "0.11.2",
        "forcem-ipsum": "1.7.3",
        "html-webpack-plugin": "2.30.1",
        "jest": "^21.2.1",
        "jest-enzyme": "^4.0.0",
        "jsdoc-babel": "^0.3.0",
        "loaders.css": "0.1.2",
        "mkdirp": "0.5.1",
        "node-sass": "4.5.3",
        "nodemon": "^1.12.1",
        "npm-run-all": "4.1.1",
        "ora": "1.3.0",
        "postcss-cssnext": "3.0.2",
        "postcss-import": "^11.0.0",
        "postcss-loader": "2.0.6",
        "prettier": "^1.7.2",
        "raf": "3.3.2",
        "react-scripts": "^1.1.4",
        "react-test-renderer": "^16.0.0-rc.3",
        "redux-mock-store": "1.3.0",
        "regenerator-runtime": "0.11.0",
        "sass-loader": "6.0.6",
        "starwars": "1.0.0",
        "style-loader": "0.18.2",
        "sw-precache-webpack-plugin": "0.11.4",
        "url-loader": "0.5.9",
        "webpack": "^3.6.0",
        "webpack-bundle-analyzer": "2.9.0",
        "webpack-dev-middleware": "1.12.0",
        "webpack-dev-server": "^2.9.1",
        "webpack-hot-middleware": "2.19.1",
        "webpack-manifest-plugin": "^1.3.2",
        "webpack-md5-hash": "0.0.5"
    }
}
